                        prefWidth="200.0" text="Solve" textAlignment="CENTER" GridPane.columnSpan="6"
                        GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.valignment="BOTTOM"/>
                <ImageView fitHeight="130.0" fitWidth="130.0" pickOnBounds="true" preserveRatio="true"
                           GridPane.columnIndex="4" GridPane.columnSpan="2" GridPane.halignment="CENTER"
                           GridPane.rowIndex="1" GridPane.rowSpan="2" GridPane.valignment="CENTER">
                    <image>
                        <Image url="@../img/backpack.png"/>
                    </image>
                </ImageView>
                <Label text="Name" GridPane.valignment="BOTTOM"/>
                <Label text="Value" GridPane.columnIndex="1" GridPane.valignment="BOTTOM"/>
                <Label text="Weight" GridPane.columnIndex="2" GridPane.valignment="BOTTOM"/>
                <TextField id="name" fx:id="name" GridPane.rowIndex="1"/>
                <TextField id="value" fx:id="value" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <TextField id="weight" fx:id="weight" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <ListView fx:id="items" prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="4"
                          GridPane.rowIndex="2" GridPane.rowSpan="3"/>
