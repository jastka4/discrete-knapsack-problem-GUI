            <columnConstraints>
                <ColumnConstraints maxWidth="-Infinity" minWidth="-Infinity" prefWidth="70.0"/>
                <ColumnConstraints maxWidth="-Infinity" minWidth="-Infinity" prefWidth="70.0"/>
                <ColumnConstraints maxWidth="-Infinity" minWidth="-Infinity" prefWidth="70.0"/>
                <ColumnConstraints maxWidth="-Infinity" minWidth="-Infinity" prefWidth="80.0"/>
                <ColumnConstraints maxWidth="-Infinity" minWidth="-Infinity" prefWidth="60.0"/>
                <ColumnConstraints maxWidth="150.0" minWidth="-Infinity" prefWidth="100.0"/>
