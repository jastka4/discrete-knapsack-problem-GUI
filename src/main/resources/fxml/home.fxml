                <Label text="Maximum value" GridPane.columnIndex="4" GridPane.columnSpan="2"
                       GridPane.halignment="CENTER" GridPane.rowIndex="9" GridPane.valignment="BOTTOM"/>
                <Separator prefWidth="200.0" GridPane.columnSpan="6" GridPane.rowIndex="7"
                           GridPane.valignment="BOTTOM"/>
                <TextField fx:id="maxValue" editable="false" GridPane.columnIndex="4" GridPane.columnSpan="2"
                           GridPane.hgrow="NEVER" GridPane.rowIndex="10" GridPane.valignment="TOP"/>
                <Label text="0 items" GridPane.columnSpan="4" GridPane.halignment="CENTER" GridPane.rowIndex="5"
                       GridPane.valignment="CENTER"/>
